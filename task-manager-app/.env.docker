# .env.docker - Environment variables per Docker Compose

# Server
PORT=5000
NODE_ENV=production

# Database
DATABASE_URL=file:/app/server/prisma/data/tasks.db

# JWT Secret (cambia in produzione!)
JWT_SECRET=change-this-secret-in-production

# Admin Credentials
DEFAULT_MASTER_USER=master
DEFAULT_MASTER_PASS=masterpass

# Backup Configuration
BACKUP_DIR=/app/backups

# NAS Configuration
# Modifica questi valori per il tuo NAS
NAS_URL=nas-server
NAS_PORT=5000
NAS_PATH=/mnt/nas/backups

# NAS Network (se usi un NAS reale)
# NAS_URL=192.168.1.100
# NAS_MOUNT_PATH=//192.168.1.100/backups
# NAS_USERNAME=admin
# NAS_PASSWORD=password

# Logging
LOG_LEVEL=info
